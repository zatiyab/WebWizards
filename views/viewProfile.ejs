<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= user.name %>'s Profile
    </title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="\css\viewProfile.css">
</head>

<body>

    <div class="col-md-9 col-lg-10 content">
        <div class="profile-container">
            <img src="/images/ali-photo.jpg" alt="Profile Picture" class="profile-pic">

            <h1>
                <%= user.name %>
            </h1>
            <div class="tagline">
                <%= user.job_title %> at <strong>
                        <%= user.company %>
                    </strong>
            </div>

            <div class="info-grid">
                <div class="info-box">
                    <strong>Branch</strong>
                    <div>
                        <%= user.branch %>
                    </div>
                </div>
                <div class="info-box">
                    <strong>Batch</strong>
                    <div>
                        <%= user.batch %>
                    </div>
                </div>
                <div class="info-box">
                    <strong>Location</strong>
                    <div>
                        <%= user.location %>
                    </div>
                </div>
                <div class="info-box">
                    <strong>Email</strong>
                    <div>
                        <%= user.email %>
                    </div>
                </div>
            </div>

            <div class="achievements">
                <h2>Achievements</h2>
                <% if (achievements.length> 0) { %>
                    <% achievements.forEach(a=> { %>
                        <div class="achievement-card">
                            <h3>
                                <%= a.name %> <small>â€” <%= a.org %></small>
                            </h3>
                            <p>
                                <%= a.description %>
                            </p>
                            <small>
                                <%= a.month %>/<%= a.year %>
                            </small>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p>No achievements added yet.</p>
                                <% } %>
            </div>
        </div>
    </div>
</body>

</html>